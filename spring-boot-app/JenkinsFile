pipeline {
    agent any

    environment {
        DOCKER_HUB_CREDENTIALS = 'docker-hub-credentials-id' // Replace with your Docker Hub credentials ID
        GITHUB_TOKEN = credentials('github') // Replace with your GitHub token credentials ID
        IMAGE_NAME = 'im29/ultimate-cicd'
    }

    stages {

        stage('Build Docker Image') {
            agent {
                docker { image 'docker:24.0.5-cli' // docker CLI container
                         args '-v /var/run/docker.sock:/var/run/docker.sock' }
            }
            steps {
                script {
                    sh '''
                        docker build -t ${IMAGE_NAME}:${BUILD_NUMBER} -f spring-boot-app/Dockerfile spring-boot-app
                    '''
                }
            }
        }

        stage('Push Docker Image') {
            agent any
            steps {
                script {
                    sh '''
                        echo $DOCKER_HUB_CREDENTIALS | docker login -u im29 --password-stdin
                        docker push ${IMAGE_NAME}:${BUILD_NUMBER}
                        docker tag ${IMAGE_NAME}:${BUILD_NUMBER} ${IMAGE_NAME}:latest
                        docker push ${IMAGE_NAME}:latest
                    '''
                }
            }
        }

        stage('Update Deployment File') {
            agent { label 'your-host-node' } // Node with git installed
            steps {
                script {
                    sh '''
                        cd ${WORKSPACE}/spring-boot-app-deplyment
                        git config user.email "induwaramihisara@gmail.com"
                        git config user.name "Induwara Mihisara"
                        sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" deployment.yml
                        git add deployment.yml
                        git commit -m "Update deployment image to version ${BUILD_NUMBER}" || echo "No changes to commit"
                        git push https://${GITHUB_TOKEN}@github.com/Mihisara29/Ultimate-CI-CD-Pipeline-SpringBoot-Application HEAD:main
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline finished successfully!"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}
