pipeline {
    agent {
        docker {
            image 'maven:3.9.4-eclipse-temurin-17-alpine'
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    environment {
        SONAR_URL = "http://44.220.247.54:9000"
        GIT_REPO_NAME = "Ultimate-CI-CD-Pipeline-SpringBoot-Application"
        GIT_USER_NAME = "Mihisara29"
        GIT_EMAIL = "induwaramihisara@gmail.com"
        DOCKER_IMAGE_BASE = "im29/ultimate-cicd"
    }

    stages {

                stage('Setup Tools') {
                    steps {
                        sh 'apk add --no-cache git bash docker-cli'
                    }
                }


        stage('Checkout') {
            steps {
                echo 'Checking out the repository...'
                git branch: 'main', url: 'https://github.com/Mihisara29/Ultimate-CI-CD-Pipeline-SpringBoot-Application.git'
            }
        }

        stage('Build and Test') {
            steps {
                dir('spring-boot-app') {
                    sh 'mvn clean package -B'
                }
            }
        }

        stage('Static Code Analysis') {
            steps {
                withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
                    dir('spring-boot-app') {
                        sh "mvn sonar:sonar -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.host.url=${SONAR_URL}"
                    }
                }
            }
        }

        stage('Build and Push Docker Image') {
            steps {
                script {
                    def dockerImageTag = "${DOCKER_IMAGE_BASE}:${BUILD_NUMBER}"
                    dir('spring-boot-app') {
                        sh 'apk add --no-cache docker-cli'
                        sh "docker build -t ${dockerImageTag} -f Dockerfile ."
                    }
                    def dockerImage = docker.image(dockerImageTag)
                    docker.withRegistry('https://index.docker.io/v1/', 'docker-cred') {
                        dockerImage.push()
                        dockerImage.push("latest")
                    }
                }
            }
        }

        stage('Update Deployment File') {
            steps {
                withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                    sh '''
                        git config user.email "induwaramihisara@gmail.com"
                        git config user.name "Mihisara29"
                        BUILD_NUMBER=${BUILD_NUMBER}
                        sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" spring-boot-app-deployment/deployment.yml
                        git add spring-boot-app-deployment/deployment.yml
                        git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                        git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                    '''
                }
            }
        }

    } // <-- closes stages

  
} // <-- closes pipeline
